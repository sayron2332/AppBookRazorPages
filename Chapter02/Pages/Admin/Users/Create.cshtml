@page
@model Chapter02.Pages.Admin.Users.CreateModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Create User";
}
<div class="content-wrapper">
    
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- SELECT2 EXAMPLE -->
            <div class="card card-default">
                <div class="card-header">
                    <h3 class="card-title">Create user</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-5 offset-3">
                            <div class="card card-primary">
                                <div class="card-header">
                                    <h3 class="card-title">New user</h3>
                                </div>
                                <!-- /.card-header -->
                                <!-- form start -->
                                @if (@ViewData["ErrorMessage"] != null)
                                {
                                    <span class="text-danger mt-3">@ViewData["ErrorMessage"]</span>
                                }
                                <form method="post">
                                    <div class="card-body">
                                        <div class="form-group">
                                            <label>First name</label>
                                            <input type="text" asp-for="CreateUser.Name" class="form-control" placeholder="Enter First Name">
                                            <span class="text-danger" asp-validation-for="CreateUser.Name"></span>
                                        </div>
                                        <div class="form-group">
                                            <label>Surname</label>
                                            <input type="text" asp-for="CreateUser.Surname" class="form-control" placeholder="Enter Surname">
                                            <span class="text-danger" asp-validation-for="CreateUser.Surname"></span>
                                        </div>
                                        <div class="form-group">
                                            <label>Email address</label>
                                            <input type="email" asp-for="CreateUser.Email" class="form-control" placeholder="Enter email">
                                            <span class="text-danger" asp-validation-for="CreateUser.Email"></span>
                                        </div>
                                        <div class="form-group">
                                            <label>Role</label>
                                            <select class="form-control select2" asp-for="CreateUser.Role" style="width: 100%;">
                                                <option selected="selected">user</option>
                                                <option>admin</option>
                                            </select>
                                            <span class="text-danger" asp-validation-for="CreateUser.Role"></span>
                                        </div>
                                        <div class="form-group">
                                            <label >Password</label>
                                            <input type="password" asp-for="CreateUser.Password" class="form-control" placeholder="Password">
                                            <span class="text-danger" asp-validation-for="CreateUser.Password"></span>
                                        </div>
                                        <div class="form-group">
                                            <label>Confirm Password</label>
                                            <input type="password" asp-for="CreateUser.ConfirmPassword" class="form-control" placeholder="Confirm Password">
                                            <span class="text-danger" asp-validation-for="CreateUser.Password"></span>
                                        </div>
                                    </div>
                                    <!-- /.card-body -->
                                    <div class="card-footer">
                                        <button type="submit" class="btn btn-primary">Create</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>