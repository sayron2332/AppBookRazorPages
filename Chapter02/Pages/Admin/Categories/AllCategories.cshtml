@page 
@model Chapter02.Pages.Admin.Categories.AllCategoriesModel
@{
    ViewData["Title"] = "All Categories";
    Layout = "_AdminLayout";
}

<div class="content-wrapper">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    
    
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Category list</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Edit</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.categories)
                                    {
                                        <tr>
                                            <td>@item.Name</td>
                                            <td><a asp-page="/admin/categories/update" asp-route-Id="@item.Id" class="btn btn-dark">Edit</a></td>
                                            <td><a asp-page="/admin/categories/delete" asp-route-Id="@item.Id" class="btn btn-danger">Delete</a></td>
                                            
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
            <!-- /.col -->
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
</div>