@page 
@model Chapter02.Pages.Admin.Categories.AllCategoriesModel
@{
    ViewData["Title"] = "AllCategories";
    Layout = "_AdminLayout";
}

<div class="container mt-12">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    <h3>Create new Category  <a href="/admin/categories/create" class="btn btn-success">Create</a></h3>
    <h2 class="text-center mb-4">All Categories</h2>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>

                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.categories != null)
            {
                @foreach (var category in Model.categories)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Name</td>

                        <td><a asp-page="/admin/categories/update" asp-route-Id="@category.Id" class="btn btn-secondary">Edit</a></td>
                        <td><a asp-page="/admin/categories/delete" asp-route-Id="@category.Id" class="btn btn-danger">Delete</a></td>


                    </tr>
                }
               
            }
            else
            {
                <h2>Categories isnt exist in database</h2>
            }
           
        </tbody>
    </table>
</div>