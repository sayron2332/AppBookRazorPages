@page "{id}"
@model Chapter02.Pages.Admin.Categories.DeleteModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Delete category";
}

<div class="content-wrapper">
    

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- SELECT2 EXAMPLE -->
            <div class="card card-danger">
                <div class="card-header">
                    <h3 class="card-title">Delete category</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-5 offset-3">
                            <div class="card card-danger">
                                <div class="card-header">
                                    <h3 class="card-title">Delete category</h3>
                                </div>
                                <!-- /.card-header -->
                                <!-- form start -->
                                @if (@ViewData["ErrorMessage"] != null)
                                {
                                    <span class="text-danger mt-3">@ViewData["ErrorMessage"]</span>
                                }
                                <form method="post">
                                    <div class="card-body">
                                        <div class="form-group">
                                            <label>Do you wanna delete category with name: @Model.Category.Name</label>
                                            <input type="hidden" value="@Model.Category.Id" name="Id">
                                        </div>
                                    </div>
                                    <!-- /.card-body -->
                                    <div class="card-footer">
                                        <button type="submit" class="btn btn-primary">Delete</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
