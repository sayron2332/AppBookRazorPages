@page
@model Chapter02.Pages.Admin.Authors.AllAuthorsModel
@{

    ViewData["Title"] = "All Authors";
    Layout = "_AdminLayout";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
   

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Author list</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>

                                    <tr>
                                        <th>Img</th>
                                        <th>Name</th>
                                        <th>Surname</th>
                                        <th>Edit</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Authors)
                                    {
                                        <tr>
                                            <td><img style="width:150px; height:120px;" src="~/images/authors/@item.ImageName" /> </td>
                                            <td>@item.Name</td>
                                            <td>@item.Surname</td>
                                            <td><a asp-page="/admin/authors/update" asp-route-Id="@item.Id" class="btn btn-dark">Edit</a></td>
                                            <td><a asp-page="/admin/authors/delete" asp-route-Id="@item.Id" class="btn btn-danger">Delete</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
            <!-- /.col -->
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
</div>
<!-- /.content -->