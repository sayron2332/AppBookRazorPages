@page
@model Chapter02.Pages.Admin.Authors.AllAuthorsModel
@{
    ViewData["Title"] = "AllAuthors";
    Layout = "_AdminLayout";
}

<div class="container mt-12">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    <h3>Create new Author  <a class="btn btn-success" asp-page="Create">Create</a></h3>
    <h2 class="text-center mb-4">All Book</h2>
    <table class="table table-striped table-bordered text-center">
        <thead class="table-dark">
            <tr>

                <th style ="max-width:30px;" scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">Surname</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>

            </tr>
        </thead>
        <tbody>
            @if (Model.Authors != null)
            {
                @foreach (var author in Model.Authors)
                {
                    <tr>
                        <td><img style="max-width:120px;max-height:120px;" src="/@author.ImageName" /></td>
                        <td>@author.Name</td>
                        <td>@author.Surname</td>
                        <td><a asp-page="/admin/authors/update" asp-route-Id="@author.Id" class="btn btn-secondary">Edit</a></td>
                        <td><a asp-page="/admin/authors/delete" asp-route-Id="@author.Id" class="btn btn-danger">Delete</a></td>

                    </tr>
                }

            }
            else
            {
                <h2>authors isnt exist in database</h2>
            }

        </tbody>
    </table>
</div>