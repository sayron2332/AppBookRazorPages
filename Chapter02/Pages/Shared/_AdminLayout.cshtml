<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <partial name="./Admin/_Headlinks.cshtml" />
</head>

<body class="layout-fixed sidebar-expand-lg bg-body-tertiary sidebar-open app-loaded">
   <div class="app-wrapper">
        <partial name="./Admin/_Navbar.cshtml" />
        <partial name="./Admin/_Sidebar.cshtml" />

        <main class="app-main">
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>@ViewData["Title"]</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a asp-page="/admin/index">Home</a></li>
                                <li class="breadcrumb-item active">@ViewData["Title"]</li>
                            </ol>
                        </div>
                    </div>
                </div><!-- /.container-fluid -->
            </section>
            @RenderBody()
        </main>
        <partial name="./Admin/_Footer.cshtml" />
        <div class="sidebar-overlay"></div>
   </div>
    <script src="/js/adminlte.min.js"></script>
</body>
</html>
