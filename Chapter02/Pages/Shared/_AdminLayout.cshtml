                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Меню навігації -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/admin/users/allusers">Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/admin/authors/allauthors">Authors</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/admin/categories/allcategories">Categories</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/admin/books/allbooks">Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/user/profile">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/home/index">Home</a>
                        </li>

